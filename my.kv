<CreateAccountWindow>:
    name: "create"

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2


            
        Button:
            pos_hint:{"x":0.2,"y":0.2}
            size_hint: 0.6, 0.15
            text: "Register"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

        Button:
            pos_hint:{"x":0.2,"y":0.5}
            size_hint: 0.6, 0.15
            text: "Attendance"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.TrackImages()


<LoginWindow>:
    
    name: "login"

    namee: namee
    rollno: rollno
    

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2
            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "RollNo: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: rollno
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4


        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Submit"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.4,"y":0.3}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "GoBack"
            on_release:
                root.manager.transition.direction = "right"
                root.goback()



